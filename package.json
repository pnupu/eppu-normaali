{
    "name": "discord-music-bot",
    "version": "1.0.0",
    "packageManager": "bun@1.3.5",
    "main": "dist/index.js",
    "scripts": {
        "build:web": "bun build src/web/client/main.ts --target browser --format iife --outfile src/web/app.js",
        "dev:web": "bun build src/web/client/main.ts --target browser --format iife --outfile src/web/app.js --watch",
        "build": "bun run build:web && tsc",
        "start": "bun run build:web && bun dist/index.js",
        "dev": "bun run build:web && bun --watch src/index.ts"
    },
    "dependencies": {
        "@discordjs/opus": "^0.10.0",
        "@discordjs/voice": "^0.18.0",
        "discord.js": "^14.21.0",
        "dotenv": "^16.5.0",
        "ffmpeg-static": "^5.2.0",
        "fuse.js": "^7.0.0",
        "node-record-lpcm16": "^1.0.1",
        "openai": "^4.0.0",
        "opusscript": "^0.0.8",
        "sodium-native": "^5.0.6",
        "sqlite3": "^5.1.0",
        "youtube-dl-exec": "^3.0.22",
        "yt-dlp-wrap": "^2.3.12"
    },
    "devDependencies": {
        "@types/node": "^24.0.4",
        "typescript": "^5.8.3"
    }
}
